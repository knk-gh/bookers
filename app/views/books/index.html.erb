<div class="top-title">
	<h1>Books</h1>
</div>

<table class="t-box">
	<tr class="t-head">
		<th>Title</th>
		<th>Body</th>
		<th></th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td class="t-text"><%= book.title %></td>
		<td class="t-text"><%= book.body %></td>
		<td class="t-text">
			<%= link_to "Show", book_path(book.id), class:"show_#{book.id}" %>
		</td>
		<td class="t-text">
			<%= link_to "Edit", edit_book_path(book.id), class:"edit_#{book.id}" %>
		</td>
		<td class="t-text">
			<%= link_to "Destroy", book_path(book.id), class:"destroy_#{book.id}", method: :delete, "data-confirm" =>"削除するよ( ^ω^ )" %>
		</td>
	</tr>
	<% end %>
</table>


<div class="new-form">

	<%= form_for(@book) do |f| %>
	<h2 class="f-head">New book</h2>
	<p>Title</p>
	<%= f.text_field :title, class:"book_title" %>
	<p>Body</p>
	<%= f.text_area :body, class:"book_body" %><br>
	<%= f.submit 'Create Book' %>
	<% end %>

</div>
