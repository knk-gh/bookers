<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

<p>Title</p>
<%= f.text_field :title, class:"book_title" %>
<p>Body</p>
<%= f.text_area :body, class:"book_body" %><br>
<%= f.submit 'Update Book' %><br>

<% end %>

<%= link_to "show", book_path, class:"show_#{@book.id}" %>|<%= link_to "Back", books_path, class:"back" %>

