<div class="top-title">

	<h1>Editing Book</h1>

	<%= form_for(@book) do |f| %>

		<p class="edit-t">Title</p>
		<%= f.text_field :title, class:"book_title" %>
		<p class="edit-t">Body</p>
		<%= f.text_area :body, class:"book_body" %><br>
		<div class="edit-t">
			<%= f.submit 'Update Book' %><br>
		</div>

	<% end %>

</div>

<div class="edit-link">
	<%= link_to "show", book_path, class:"show_#{@book.id}" %>|<%= link_to "Back", books_path, class:"back" %>
</div>


